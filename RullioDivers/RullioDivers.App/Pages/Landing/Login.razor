@page "/login"

<PageTitle>RullioDivers - Login</PageTitle>

<main id="login">
    
    <a href="/" id="login-back-btn">Inicio</a>

    <form id="login-form" action="/admin.html" method="get">
        <h1>Ingresar</h1>
        <div class="form-group mb-4">
            <label class="form-label">Correo</label>
            <input type="email" class="form-control" placeholder="correo@correo.com">
        </div>
        <div class="form-group mb-5">
            <label class="form-label">Contraseña</label>
            <input type="password" class="form-control" placeholder="• • • • • •">
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-outline-light w-100">Login</button>
            <a href="register" class="btn btn-outline-secondary d-block w-50 mt-3 float-end">Registro</a>
        </div>
    </form>
</main>
